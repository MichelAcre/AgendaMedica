@model IEnumerable<AgendaMedica.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Agendas de Consulta</h1>

<p>
    <a asp-action="Create" class="btn btn-outline btn-dark btn-outline-light m-3 row-6"><i class="bi bi-clipboard2-plus"></i> Criar novo</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medico.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataConsulta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AgendaId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-pen"></i> Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.AgendaId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-book"></i> Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.AgendaId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-trash3"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
