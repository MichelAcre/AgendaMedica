@model IEnumerable<AgendaMedica.Models.Medico>

@{
	ViewData["Title"] = "Index";
}

<h1 class="text-white">Médicos</h1>

<p>
	<a asp-action="Create" class="btn btn-outline btn-dark btn-outline-light m-3 row-6"><i class="bi bi-clipboard2-plus"></i> Criar novo</a>
</p>
<table class="table text-white table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CRM)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Celular)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Especialidade)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CRM)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Celular)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Especialidade.Nome)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.MedicoId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-pen"></i> Editar</a> |

					<a asp-action="Delete" asp-route-id="@item.MedicoId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-trash3"></i> Excluir</a>
				</td>
			</tr>
		}
	</tbody>
</table>
