@model IEnumerable<AgendaMedica.Models.Especialidade>

@{
	ViewData["Title"] = "Index";
}

<h1 class="text-light">Especialidades</h1>

<p>
	<a asp-action="Create" class="btn btn-outline btn-dark btn-outline-light m-3 row-6"><i class="bi bi-clipboard2-plus"></i> Criar novo</a>
</p>
<table class="table bg-black text-white table-striped">
	<thead class="text-white">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.EspecialidadeId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-pen"></i> Editar</a> |
					<a asp-action="Delete" asp-route-id="@item.EspecialidadeId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-trash3"></i> Excluir</a>
				</td>
			</tr>
		}
	</tbody>
</table>
