@model AgendaMedica.Models.Medico

@{
    ViewData["Title"] = "Create";
}
<div class="container text-light mt-5">

<h1 class="text-white">Create</h1>

<h4 class="text-white">Medico</h4>
<hr />
<div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row gap-3 mb-3">
                    <div class="col-12">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            </div>
            </div>
                <div class="row gap-3 mb-3">
                    <div class="col-12">
            <div class="form-group">
                <label asp-for="CRM" class="control-label"></label>
                <input asp-for="CRM" class="form-control" />
                <span asp-validation-for="CRM" class="text-danger"></span>
            </div>
            </div>
            </div>
                <div class="row gap-3 mb-3">
                    <div class="col-12">
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            </div>
            </div>
                <div class="row gap-3 mb-3">
                    <div class="col-12">
            <div class="form-group">
                <label asp-for="EspecialidadeId" class="control-label"></label>
                <select asp-for="EspecialidadeId" class ="form-control" asp-items="ViewBag.EspecialidadeId"></select>
            </div>
            </div>
            </div>
            <div class="row gap-3 mt-3 mb-3">
                <div class="col-12 d-flex justify-content-between">
            <div>
                <a asp-action="Index">Voltar para a lista</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
            </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
