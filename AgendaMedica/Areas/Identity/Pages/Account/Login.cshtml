@page
@model LoginModel

@{
	ViewData["Title"] = "Entrar";
}

<div class="row py-5">
	<div class="col-md-4 offset-4 text-white" style="background-color: #0D0D0D; border-radius: 20px;">
		<h1>@ViewData["Title"]</h1>
		<section>
			<form id="account" method="post">
				<h2>Digite suas credencias para fazer o login.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Input.Email" class="form-label text-black">Email</label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
					<label asp-for="Input.Password" class="form-label text-black">Senha</label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="checkbox mb-3">
					<label asp-for="Input.RememberMe" class="form-label">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						Lembrar de Mim?
					</label>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logar</button>
				</div>
				<div>
					<p>
						<a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a Senha?</a>
					</p>
					<p>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar Novo Usuário</a>
					</p>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
